<%= form_for @task, remote: true do |f| %>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description, id: :task_description %>
  </div>
  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.datetime_select :deadline, id: :task_deadline %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>